{
	"page": {
		"label": "TRANSLATE.SNAPCAST.SNAPCASTCONF"
	},
	"sections": [{
		"id": "section_sampleconf",
		"element": "section",
		"label": "TRANSLATE.SNAPCAST.SERVER",
		"icon": "fa-server",
		"onSave": {
			"type": "controller",
			"endpoint": "miscellanea/SnapCast",
			"method": "updateSnapServer"
		},
		"saveButton": {
			"label": "TRANSLATE.SNAPCAST.SAVE",
			"data": [
				"server_enabled",
				"pipe_name",
				"sample_rate",
				"bit_depth",
				"channels",
				"codec"
				]
		},
		"content": [{
			  "id":"server_enabled",
			  "element": "switch",
			  "doc": "TRANSLATE.SNAPCAST.D_SERVER_ENABLED",
			  "label": "TRANSLATE.SNAPCAST.SERVER_ENABLED",
			  "value": true
		},
		{
			"id": "pipe_name",
			"element": "input",
			"type": "text",
			"doc": "TRANSLATE.SNAPCAST.D_PIPE_NAME",
			"label": "TRANSLATE.SNAPCAST.PIPE_NAME",
			"value": "VOLUMIO",
			"visibleIf": 
					{
						"field": "server_enabled",
						"value": true
					}
		},
		{
			"id": "sample_rate",
			"element": "select",
			"doc": "TRANSLATE.SNAPCAST.D_SAMPLE_RATE",
			"label": "TRANSLATE.SNAPCAST.SAMPLE_RATE",
			"value": {
				"value": 48000,
				"label": "48000kHz"
			},
			"options": [],
			"visibleIf": 
					{
						"field": "server_enabled",
						"value": true
					}
		},
		{
			"id": "bit_depth",
			"element": "select",
			"doc": "TRANSLATE.SNAPCAST.D_BIT_DEPTH",
			"label": "TRANSLATE.SNAPCAST.BIT_DEPTH",
			"value": {
				"value": 16,
				"label": "16 bits"
			},
			"options": [],
			"visibleIf": 
					{
						"field": "server_enabled",
						"value": true
					}
		},
		{
			"id": "channels",
			"type": "text",
			"element": "input",
			"doc": "TRANSLATE.SNAPCAST.D_CHANNELS",
			"label": "TRANSLATE.SNAPCAST.CHANNELS",
			"value": "2",
			"visibleIf": 
					{
						"field": "server_enabled",
						"value": true
					}
		},
		{
			"id": "codec",
			"element": "select",
			"doc": "TRANSLATE.SNAPCAST.D_CODEC",
			"label": "TRANSLATE.SNAPCAST.CODEC",
			"value": {
				"value": "flac",
				"label": "Flac (lossless compressed [default])"
			},
			"options": [],
			"visibleIf": 
					{
						"field": "server_enabled",
						"value": true
					}
		}]
	},
	{
		"id": "section_clientconf",
		"element": "section",
		"label": "TRANSLATE.SNAPCAST.CLIENT",
		"icon": "fa-music",
		"onSave": {
			"type": "controller",
			"endpoint": "miscellanea/SnapCast",
			"method": "updateSnapClient"
		},
		"saveButton": {
			"label": "TRANSLATE.SNAPCAST.SAVE",
			"data": [
				"client_enabled",
				"volumio_host",
				"custom_host",
				"host",
				"soundcard"
				]
		},
		"content": [{
			  "id":"client_enabled",
			  "element": "switch",
			  "doc": "TRANSLATE.SNAPCAST.D_CLIENT_ENABLED",
			  "label": "TRANSLATE.SNAPCAST.CLIENT_ENABLED",
			  "value": true
		},
		{
			"id": "volumio_host",
			"element": "select",
			"doc": "TRANSLATE.SNAPCAST.D_VOLUMIOHOST",
			"label": "TRANSLATE.SNAPCAST.VOLUMIOHOST",
			"value": {
				"value": "localhost",
				"label": "Local host [default]"
			},
			"options": [],
			"visibleIf": 
					{
						"field": "client_enabled",
						"value": true
					}
		},
		{
			  "id":"custom_host",
			  "element": "switch",
			  "doc": "TRANSLATE.SNAPCAST.D_CUSTOMHOST",
			  "label": "TRANSLATE.SNAPCAST.CUSTOMHOST",
			  "value": false
		},
		{
			"id": "host",
			"element": "input",
			"type": "text",
			"doc": "TRANSLATE.SNAPCAST.D_HOSTNAME",
			"label": "TRANSLATE.SNAPCAST.HOSTNAME",
			"value": "127.0.0.1",
			"visibleIf": 
					{
						"field": "custom_host",
						"value": true						
					}
		},
		{
			"id": "soundcard",
			"element": "select",
			"doc": "TRANSLATE.SNAPCAST.D_SOUNDCARD",
			"label": "TRANSLATE.SNAPCAST.SOUNDCARD",
			"value": {
				"value": "ALSA",
				"label": "Audio Jack"
			},
			"options": [],
			"visibleIf": 
					{
						"field": "client_enabled",
						"value": true
					}
		}]
	},
	{
		"id": "section_mpdconf",
		"element": "section",
		"label": "TRANSLATE.SNAPCAST.MPD",
		"icon": "fa-play",
		"onSave": {
			"type": "controller",
			"endpoint": "miscellanea/SnapCast",
			"method": "updateMPDConfig"
		},
		"saveButton": {
			"label": "TRANSLATE.SNAPCAST.PATCHMPD",
			"data": [
				"patch_mpd",
				"mpd_sample_rate",
				"mpd_bit_depth",
				"mpd_channels",
				"enable_alsa_mpd"
				]
		},
		"content": [{
			  "id":"patch_mpd",
			  "element": "switch",
			  "doc": "TRANSLATE.SNAPCAST.D_PATCH_MPD",
			  "label": "TRANSLATE.SNAPCAST.PATCH_MPD",
			  "value": true
		},
		{
			"id": "mpd_sample_rate",
			"element": "select",
			"doc": "TRANSLATE.SNAPCAST.D_MPD_SAMPLE_RATE",
			"label": "TRANSLATE.SNAPCAST.MPD_SAMPLE_RATE",
			"value": {
				"value": 48000,
				"label": "48000kHz"
			},
			"options": [],
			"visibleIf": 
					{
						"field": "patch_mpd",
						"value": true
					}
		},
		{
			"id": "mpd_bit_depth",
			"element": "select",
			"doc": "TRANSLATE.SNAPCAST.D_BIT_DEPTH",
			"label": "TRANSLATE.SNAPCAST.BIT_DEPTH",
			"value": {
				"value": 16,
				"label": "16 bits"
			},
			"options": [],
			"visibleIf": 
					{
						"field": "patch_mpd",
						"value": true
					}
		},
		{
			"id": "mpd_channels",
			"type": "text",
			"element": "input",
			"doc": "TRANSLATE.SNAPCAST.D_CHANNELS",
			"label": "TRANSLATE.SNAPCAST.CHANNELS",
			"value": "2",
			"visibleIf": 
					{
						"field": "patch_mpd",
						"value": true
					}
		},
		{
			  "id":"enable_alsa_mpd",
			  "element": "switch",
			  "doc": "TRANSLATE.SNAPCAST.D_ENABLE_ALSA_MPD",
			  "label": "TRANSLATE.SNAPCAST.ENABLE_ALSA_MPD",
			  "value": false,
			  "visibleIf": 
					{
						"field": "patch_mpd",
						"value": true
					}
		}]
	},
	{
		"id": "section_loadedconf",
		"element": "section",
		"label": "TRANSLATE.SNAPCAST.LOADED",
		"icon": "fa-cogs",
		"content": [{
			"id": "alsa_output_device",
			"type": "text",
			"element": "input",
			"doc": "TRANSLATE.SNAPCAST.D_OUTPUT_DEVICE",
			"label": "TRANSLATE.SNAPCAST.OUTPUT_DEVICE",
			"value": "2"
		},
		{
			"id": "alsa_mixer",
			"type": "text",
			"element": "input",
			"doc": "TRANSLATE.SNAPCAST.D_MIXER",
			"label": "TRANSLATE.SNAPCAST.MIXER",
			"value": "1"
		}]
	}]
}