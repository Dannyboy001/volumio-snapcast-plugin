{
	"page": {
		"label": "TRANSLATE.SNAPCAST.SNAPCASTCONF"
	},
	"sections": [{
		"id": "section_sampleconf",
		"element": "section",
		"label": "TRANSLATE.SNAPCAST.SERVER",
		"icon": "fa-server",
		"onSave": {
			"type": "controller",
			"endpoint": "miscellanea/SnapCast",
			"method": "updateSnapServer"
		},
		"saveButton": {
			"label": "TRANSLATE.SNAPCAST.SAVE",
			"data": [
				"pipe_name",
				"sample_rate",
				"bit_depth",
				"channels",
				"codec"
				]
		},
		"content": [{
			"id": "pipe_name",
			"element": "input",
			"type": "text",
			"doc": "Snapcast stream name, as shown in clients.",
			"label": "TRANSLATE.SNAPCAST.PIPE_NAME",
			"value": "VOLUMIO"
		},
		{
			"id": "sample_rate",
			"element": "select",
			"doc": "The number of samples per second.",
			"label": "TRANSLATE.SNAPCAST.SAMPLE_RATE",
			"value": {
				"value": 48000,
				"label": "48000kHz"
			},
			"options": []
		},
		{
			"id": "bit_depth",
			"element": "select",
			"doc": "The number of bits of information in each sample.",
			"label": "TRANSLATE.SNAPCAST.BIT_DEPTH",
			"value": {
				"value": 16,
				"label": "16 bits"
			},
			"options": []
		},
		{
			"id": "channels",
			"type": "text",
			"element": "input",
			"doc": "The amount of channels to output (2 = stereo).",
			"label": "TRANSLATE.SNAPCAST.CHANNELS",
			"value": "2"
		},
		{
			"id": "codec",
			"element": "select",
			"doc": "The codec used for the stream.",
			"label": "TRANSLATE.SNAPCAST.CODEC",
			"value": {
				"value": "flac",
				"label": "Flac (lossless compressed [default])"
			},
			"options": []
		}]
	},
	{
		"id": "section_clientconf",
		"element": "section",
		"label": "TRANSLATE.SNAPCAST.CLIENT",
		"icon": "fa-music",
		"onSave": {
			"type": "controller",
			"endpoint": "miscellanea/SnapCast",
			"method": "updateSnapClient"
		},
		"saveButton": {
			"label": "TRANSLATE.SNAPCAST.SAVE",
			"data": [
				"host",
				"soundcard"
				]
		},
		"content": [{
			"id": "host",
			"element": "input",
			"type": "text",
			"doc": "Snapcast server name or IP.",
			"label": "TRANSLATE.SNAPCAST.HOSTNAME",
			"value": "localhost"
		},
		{
			"id": "soundcard",
			"element": "select",
			"doc": "The soundcard you wish to use for the SnapCast client output. This can be the name or index.",
			"label": "TRANSLATE.SNAPCAST.SOUNDCARD",
			"value": {
				"value": 0,
				"label": "[0] Default rPi soundcard"
			},
			"options": []
		}]
	},
	{
		"id": "section_loadedconf",
		"element": "section",
		"label": "TRANSLATE.SNAPCAST.LOADED",
		"icon": "fa-cogs",
		"content": [{
			"id": "alsa_output_device",
			"type": "text",
			"element": "input",
			"doc": "ALSA output device.",
			"label": "TRANSLATE.SNAPCAST.OUTPUT_DEVICE",
			"value": "2"
		},
		{
			"id": "alsa_mixer",
			"type": "text",
			"element": "input",
			"doc": "ALSA mixer.",
			"label": "TRANSLATE.SNAPCAST.MIXER",
			"value": "1"
		},
		{
			"id": "software_mixer_index",
			"element": "text",
			"doc": "ALSA software mixer index.",
			"label": "TRANSLATE.SNAPCAST.SOFTWARE_MIXER_INDEX",
			"value": "2"
		}]
	}]
}